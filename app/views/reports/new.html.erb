
<div class="container-contact100">
  <div class="wrap-contact100">

    <span class="contact100-form-title">Make a report </span>
      <div class="form-container">
        <%= simple_form_for [@report] do |f| %>
          <%= f.input :title, class: "input100" %>
          <%= f.input :description %>
          <%= f.input :location %>
          <%= f.input :category, collection: ["Improvement", "Repair"], default:["Improvement"] %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit "Submit report", class: "btn btn-lg btn-primary rounded-pill mb-5 mt-2", style: "width: 100%;"%>
          <% end %>
      </div>
    </div>
  </div>
</div>
