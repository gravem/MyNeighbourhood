<div class="container tabs" data-controller="toggle-map">

  <div class="tab-content" id="pills-tabContent">

    <ul class="nav nav-pills mb-3 w-100 my-2" id="pills-tab" role="tablist">
      <li class="nav-item w-50 p-1" role="presentation">
        <button class="nav-link w-100  active rounded-pill border border-primary" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Reports</button>
      </li>
      <li class="nav-item w-50 p-1 " role="presentation">
        <button class="nav-link w-100 rounded-pill border border-primary ml-3" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Map</button>
      </li>
    </ul>

    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
      <%= render 'pages/report_card', report: @reports %>
    </div>

  </div>

</div>

<div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
