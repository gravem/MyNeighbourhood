<h2>Ticket Status: <%= @ticket.status %></h2>

<p> <%= @ticket.report.title  %></p>
  <% @ticket.report.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<h3>Notes</h3>
<% @ticket.notes.each do |note| %>
  <p><%= note.description %></p>
    <% note.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
<% end %>

<%= simple_form_for [@ticket, @note] do |f| %>
  <%= f.input :description, label: "Leave a note" %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Submit note" %>
<% end %>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">modal
</button>

<%= link_to "Back", report_path(@ticket.report) %> |
<div class="footer-padding" style="height: 200px"></div>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Congratulations!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">Close Ticket</button>
      </div>
      <div class="modal-body">
      You've completed a ticket
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= link_to "close ticket", close_ticket_path(@ticket) %>
      </div>
    </div>
  </div>
</div>
